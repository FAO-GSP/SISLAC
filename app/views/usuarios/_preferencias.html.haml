= form_for current_usuario, html: { class: 'span-24' } do |f|

  = f.error_messages

  = field_set_tag 'Edit√° tus preferencias', class: 'celeste_oscuro span-24' do

    .span-24
      .span-3= f.label :idioma, 'Idioma preferido'
      .span-9.last= f.select :idioma, I18n.available_locales.map(&:to_s)

    .span-4= f.submit 'Actualizar preferencias'
